<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LapakKitaAndroid" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_500</item>
        <item name="colorPrimaryVariant">@color/green_200</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_500</item>
        <item name="colorSecondaryVariant">@color/green_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/green_700</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.LapakKitaAndroid.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.LapakKitaAndroid.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.LapakKitaAndroid.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="TextContent">
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>
    <style name="TextContent.Subtitle">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/inter_medium</item>
    </style><style name="TextContent.Header">
        <item name="android:textSize">32sp</item>
    <item name="android:fontFamily">@font/inter_bold</item>
    </style>
</resources>