<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.RecommendationActivity">
    <androidx.compose.ui.platform.ComposeView
        android:id="@+id/recommendation_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/tv_selected_category"
        app:layout_constraintTop_toBottomOf="@id/recommendation_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Lorem"
        style="@style/TextContent.Subtitle"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"/>
    <androidx.compose.ui.platform.ComposeView
        android:id="@+id/recommendation_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_selected_category"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>